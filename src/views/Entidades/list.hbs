<div class="container p-4">
    <div class="card text-center">
        <h1 class="card-title">Lista de Entidades</h1>
            <a class="btn btn-primary" href="/entidades/add">
                Agregar
            </a>
    </div>
        <div class="row">
            {{#each entidad}}
            <div class="col-md-3">
                <div class="card text-center">
                    <div class="card-body">
                        <a href="{{Id}}" target="_blank">
                            <h3 class="card-title text-uppercase">
                                {{Nombre}}
                            </h3>
                        </a>
                        <a class="btn btn-danger" href="/entidades/delete/{{Id}}">
                            Borrar
                        </a>
                        <a class="btn btn-secondary" href="/entidades/edit/{{Id}}">
                            Modificar
                        </a>
                    </div>
                </div>
            </div>
            {{else}}
            <div class="col-md-4 mx-auto">
                <div class="card card-body text-center">
                    <p>Por ahora no tienes entidades.</p>
                    <a href="/entidades/add">Crea una!</a>
                </div>
            </div>
            {{/each}}
        </div>
</div>